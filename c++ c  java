#include <stdio.h>//標準輸入輸出
 
int main()//主函式
{
    /* 我的第一個 C 程序 */
    printf("Hello, World! \n");//印出Hello,Word
 
    return 0;//退出
}
===============================
public class HelloWorld {//創建類別
    public static void main(String[] args) {//創建一個主函式
        System.out.println("Hello World");//印出Hello,Word
    }
}
